<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.PizzaController"
      alignment="center" spacing="10"
      styleClass="root">
    
    <HBox alignment="center">
        <ImageView>
            <image>
                <Image url="@pizzeria.png"/>
            </image>
        </ImageView>
        <Text styleClass="heading" text="Create pizza"/>
    </HBox>
    <HBox alignment="center" spacing="10" styleClass="header">
        
        <Label text="OR..." />
        <ComboBox fx:id="popCombo" promptText="Select past popular pizza"/>
        <Text styleClass="heading" text="Create pizza"/>
    </HBox>
     <HBox alignment="center" spacing="10" styleClass="footer">
        <Button text="Cancel" onAction="#cancel"/>
        <Button text="Create" onAction="#create"/>
    </HBox>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>

    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
